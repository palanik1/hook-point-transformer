rule traceStatement
 replace [preprocessor_line]
   '#include <stdio.h>
 by
   "#include <stdio.h>" [NL] "#include <conio.h>" 
end rule

function main 
	replace [program]
	 P [program]
	by
	 P [replaceXDP_MD]
	  [traceStatement]
end function

